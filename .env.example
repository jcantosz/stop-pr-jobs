# Example .env file for local development
# Copy this file to .env and fill in the values

# GitHub authentication (use either TOKEN or GitHub App credentials)
# Personal access token with appropriate permissions
export INPUT_GITHUB_TOKEN=$GITHUB_TOKEN

# Target branch to check for PRs against
export INPUT_BRANCH=main

# Repository in format owner/repo
export INPUT_REPOSITORY=org/repo

# Optional settings
# API_URL=https://api.github.com  # Custom API URL for GitHub Enterprise
# DRY_RUN=true                    # Set to true for testing without cancelling workflows
# DEBUG=true                      # Enable verbose debugging